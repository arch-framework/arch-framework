{
    "root": true,
    "ignorePatterns": ["**/*"],
    "plugins": ["@nx", "import", "unused-imports", "jest"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "settings": {
                "import/internal-regex": "@angular/",
                "import/external-module-folders": ["node_modules"]
            },
            "rules": {
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "enforceBuildableLibDependency": true,
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "type:feature",
                                "onlyDependOnLibsWithTags": ["type:ui", "type:domain", "type:util"]
                            },
                            {
                                "sourceTag": "type:ui",
                                "onlyDependOnLibsWithTags": ["type:domain", "type:util"]
                            },
                            {
                                "sourceTag": "type:domain",
                                "onlyDependOnLibsWithTags": ["type:util"]
                            },
                            {
                                "sourceTag": "domain:shared",
                                "onlyDependOnLibsWithTags": ["domain:shared"]
                            }
                        ]
                    }
                ],
                "jest/no-focused-tests": "error",
                "@typescript-eslint/no-unused-vars": "off",
                "unused-imports/no-unused-imports": "error",
                "unused-imports/no-unused-vars": [
                    "error",
                    {
                        "vars": "all",
                        "varsIgnorePattern": "^_",
                        "args": "after-used",
                        "argsIgnorePattern": "^_"
                    }
                ],
                "no-console": [
                    "error",
                    {
                        "allow": ["warn", "error", "debug"]
                    }
                ],
                "import/order": [
                    "error",
                    {
                        "newlines-between": "always",
                        "groups": ["internal", "unknown", "external", "builtin", ["parent", "sibling", "index"]],
                        "pathGroups": [
                            {
                                "pattern": "rxjs",
                                "group": "unknown"
                            },
                            {
                                "pattern": "rxjs/**",
                                "group": "unknown"
                            },
                            {
                                "pattern": "@ng-arch/**",
                                "group": "builtin"
                            }
                        ],
                        "pathGroupsExcludedImportTypes": ["type", "object"]
                    }
                ]
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "extends": ["plugin:@nx/typescript"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "extends": ["plugin:@nx/javascript"],
            "rules": {}
        },
        {
            "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
            "env": {
                "jest": true
            },
            "rules": {}
        },
        {
            "files": ["*.json"],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "@nx/dependency-checks": [
                    "error",
                    {
                        "buildTargets": ["build"],
                        "checkMissingDependencies": true,
                        "checkObsoleteDependencies": true,
                        "checkVersionMismatches": false,
                        "ignoredDependencies": ["tslib", "@faker-js/faker", "factory.ts"]
                    }
                ]
            }
        }
    ]
}
